<section class="container py-5 bg-danger bg-opacity-25">
    <h2 class="text-center text-primary">
        Modificar Ofertas
    </h2>
    <div class="row d-flex justify-content-center">
        <form  class="w-50" action="/ofertas/edit" method="post">
            <input type="text" id="id" name="id" value="<%= ofertas.id %>" hidden>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input class="form-control" type="text" name="nombre" id="nombre" value="<%= ofertas.nombre %>">
            </div>
            <div class="mb-3">
                <label for="ubicacion" class="form-label">Ubicaci√≥n</label>
                <input class="form-control" type="text" name="ubicacion" id="ubicacion" value="<%= ofertas.ubicacion %>">
            </div>
            <div class="mb-3">
                <label for="ingreso" class="form-label">Ingreso</label>
                <input class="form-control" type="text" name="ingreso" id="ingreso" value="<%= ofertas.ingreso%>">
            </div>
            <div class="mb-3">
                <label for="egreso" class="form-label">Egreso</label>
                <input class="form-control" type="text" name="egreso" id="egreso" value="<%= ofertas.egreso%>">
            </div>
            <div class="mb-3">
                <label for="estadia" class="form-label">Estadia</label>
                <input class="form-control" type="text" name="estadia" id="estadia" value="<%= ofertas.estadia%>">
            </div>
            <div class="mb-3">
                <label for="costo" class="form-label">Costo</label>
                <input class="form-control" type="text" name="costo" id="costo" value="<%= ofertas.costo%>">
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" name="holtel" id="holtel" value="Cancha de Tennis">
                <label for="holtel" class="form-check-label">Hotel</label>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" name="traslado" id="traslado" value="Zona privada de playa">
                <label for="traslado" class="form-check-label">Traslado</label>
            </div>
            <div class="mb-3 form-check">
                <img src="/images/<%= ofertas.src %>" width="150px" alt="">
                <input type="text" name="src" id="src" value="<%= ofertas.src %>" hidden>
                <input type="text" name="title" value="ofertas" hidden>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
        </form>
    </div>

</section>